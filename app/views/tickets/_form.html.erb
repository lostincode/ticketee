<%= form_for [@project, @ticket], :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, :size => "30x5" %>
  </p>
  <%= render "tags/form", :f => f %>
  <% number = 0 %>
  <div id='files'>
  <%= render :partial => 'files/form', :locals => { :number => number } %>
  </div>

  <%= f.submit :class => "btn" %>
<% end %>
<%= link_to "Add another file", 'javascript:',
  :id => "add_another_file" %>
